<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_image"
    android:background="@drawable/custom_bg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/item_list_image"
            android:layout_height="@dimen/item_list_image"
            android:paddingLeft="@dimen/item_padding"
            android:paddingStart="@dimen/item_padding"
            android:src="@drawable/artist" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/item_padding"
            android:paddingStart="@dimen/item_padding">

            <TextView
                android:id="@+id/track"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center|center_vertical"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/item_padding"
                android:paddingRight="@dimen/item_padding"
                android:text="Track"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textSize="@dimen/item_font_size_title" />

            <TextView
                android:id="@+id/album"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingEnd="@dimen/item_padding"
                android:paddingRight="@dimen/item_padding"
                android:text="Album"
                android:textColor="@color/dim_foreground_material_dark"
                android:textSize="@dimen/item_font_size_subtitle" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:background="@color/primary_material_dark" />

</RelativeLayout>