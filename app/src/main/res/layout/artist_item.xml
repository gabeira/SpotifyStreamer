<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_image"
    android:background="@drawable/custom_bg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/item_list_image"
            android:layout_height="@dimen/item_list_image"
            android:paddingEnd="@dimen/item_margin"
            android:paddingLeft="@dimen/item_padding"
            android:paddingRight="@dimen/item_margin"
            android:paddingStart="@dimen/item_padding"
            android:src="@drawable/artist" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/item_padding"
            android:paddingRight="@dimen/item_padding"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="@dimen/item_font_size_title" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:background="@color/primary_material_dark" />

</RelativeLayout>